/* pages/mine/mine.wxss */
.container {
  min-height: 100vh;
  background: #f5f5f5;
}

/* 用户信息区 */
.user-section {
  background: linear-gradient(135deg, #1AAD19 0%, #2ecc40 100%);
  padding: 60rpx 40rpx 80rpx;
}

.user-info {
  display: flex;
  align-items: center;
}

.login-prompt {
  display: flex;
  align-items: center;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background: #fff;
}

.user-detail {
  margin-left: 30rpx;
  color: #fff;
}

.nickname {
  font-size: 36rpx;
  font-weight: 600;
}

.login-text {
  font-size: 32rpx;
  color: #fff;
  margin-left: 30rpx;
}

/* 功能菜单区 */
.menu-section {
  background: #fff;
  margin: -40rpx 30rpx 30rpx;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.06);
}

.menu-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-left {
  display: flex;
  align-items: center;
}

.menu-icon {
  width: 44rpx;
  height: 44rpx;
  margin-right: 20rpx;
}

.menu-text {
  font-size: 30rpx;
  color: #333;
}

.menu-right {
  display: flex;
  align-items: center;
}

.menu-badge {
  padding: 4rpx 16rpx;
  background: #ff4d4f;
  color: #fff;
  font-size: 22rpx;
  border-radius: 20rpx;
  margin-right: 10rpx;
}

.arrow {
  color: #ccc;
  font-size: 28rpx;
}

/* 退出登录 */
.logout-section {
  padding: 40rpx 30rpx;
}

.logout-btn {
  width: 100%;
  padding: 24rpx;
  background: #fff;
  color: #ff4d4f;
  border: none;
  border-radius: 16rpx;
  font-size: 30rpx;
}

.logout-btn::after {
  border: none;
}

/* 弹窗 */
.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1000;
}

.feedback-modal, .about-modal {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 600rpx;
  background: #fff;
  border-radius: 16rpx;
  z-index: 1001;
  overflow: hidden;
}

.modal-title {
  padding: 30rpx;
  text-align: center;
  font-size: 32rpx;
  font-weight: 600;
  border-bottom: 1rpx solid #f0f0f0;
}

.modal-body {
  padding: 30rpx;
}

.feedback-input {
  width: 100%;
  height: 240rpx;
  padding: 20rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.contact-input {
  width: 100%;
  padding: 20rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 8rpx;
  font-size: 28rpx;
  margin-top: 20rpx;
  box-sizing: border-box;
}

.modal-actions {
  display: flex;
  border-top: 1rpx solid #f0f0f0;
}

.modal-btn {
  flex: 1;
  padding: 30rpx;
  text-align: center;
  font-size: 30rpx;
  border: none;
  border-radius: 0;
  line-height: 1;
}

.modal-btn.cancel {
  background: #f5f5f5;
  color: #666;
}

.modal-btn.confirm {
  background: #1AAD19;
  color: #fff;
}

.modal-btn::after {
  border: none;
}

/* 关于我们 */
.about-content {
  padding: 20rpx 0;
}

.about-item {
  display: flex;
  margin-bottom: 20rpx;
  font-size: 28rpx;
}

.about-item .label {
  color: #999;
}

.about-item .value {
  color: #333;
}

.about-desc {
  margin-top: 30rpx;
  padding-top: 30rpx;
  border-top: 1rpx solid #f0f0f0;
  font-size: 26rpx;
  color: #666;
  line-height: 1.8;
}
