/** app.wxss **/
page {
  background-color: #f5f5f5;
  font-size: 28rpx;
  color: #333;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
}

.container {
  padding: 20rpx;
}

/* 通用按钮样式 */
.btn-primary {
  background-color: #1AAD19;
  color: #fff;
  border-radius: 8rpx;
  padding: 20rpx 40rpx;
  text-align: center;
}

.btn-primary:active {
  opacity: 0.8;
}

/* 通用卡片样式 */
.card {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

/* 免责声明 */
.disclaimer {
  padding: 30rpx;
  text-align: center;
  color: #999;
  font-size: 24rpx;
  line-height: 1.6;
}

/* 空状态 */
.empty-state {
  padding: 100rpx 0;
  text-align: center;
  color: #999;
}

/* 加载中 */
.loading {
  padding: 40rpx;
  text-align: center;
  color: #999;
}
